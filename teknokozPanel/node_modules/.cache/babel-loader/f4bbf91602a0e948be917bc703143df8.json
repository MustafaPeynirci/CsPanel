rmButton:false,\n              timerProgressBar: true,\n              didOpen: () => {\n                this.Swal.showLoading()\n                const b = Swal.getHtmlContainer().querySelector('b')\n                timerInterval = setInterval(() => {\n                  b.textContent = Swal.getTimerLeft()\n                }, 100)\n              },\n              willClose: () => {\n                clearInterval(timerInterval)\n              }})\n          })\n        }\n        else if (result.isDenied) {\n        }\n      });\n\n\n    },\n  },\n  computed:{\n    filteredCategory(){\n      return this.categories.filter((category)=>{\n        return category.name.match(this.search)\n      })\n    },\n    getcategory(){\n        axios.get('http://127.0.0.1:8000/api/category',\n        {\n          headers: {\n            Authorization: \"Bearer \" + localStorage.getItem('token'),\n          }\n        }).then(response => {\n          this.categories = response.data;\n    })\n  }\n  },\n  mounted(){\n    this.getcategory;\n  }\n}\n</script>\n\n<style scoped>\n.divTable{\n  overflow: auto;\n}\ntable{\n  border-collapse: unset!important;\n}\ntable tr{\n  width: 100px;\n  height: 50px;\n}\ntable th{\n  font-weight: 500;\n  font-family: 'Optima';\n}\ntable td{\n  max-width: 150px;\n  overflow: hidden;\n  text-overflow: ellipsis;\n  white-space: nowrap;\n}\n.tdimg{\n  text-align: center;\n  overflow: unset;\n}\n.img{\n  width: 60px;\n  height: 60px;\n  object-fit: cover;\n  transition: transform .8s;\n  border-radius: 5px;\n}\n.tdbutton{\n  width: 100px;\n  text-align: center;\n  border: none;\n}\n.btn{\n  border: none;\n  font-size: 20px;\n  transition: transform .2s;\n}\n.tableSp{\n  margin-top: 10px;\n  margin-right: 10px;\n  text-align: end;\n}\n.thSearch{\n  width: 200px;\n  height: 40px;\n  border: none;\n  border-radius: 5px;\n  padding: 3px;\n  text-align: center;\n  border-left: 4px solid coral ;\n}\n.thPlus{\n  border: none;\n  font-size: 20px;\n  background-color: