       this.$swal.fire({\n              position: 'top-end',\n              icon: 'error',\n              text: error,\n              showConfirmButton: false,\n              width: '250px',\n              timer: 1500\n            });\n          });\n        } else if (result.isDenied) {}\n      });\n    }\n\n  },\n  computed: {\n    rows() {\n      return this.items.length;\n    },\n\n    filteredCategory() {\n      return this.categories.filter(category => {\n        return category.name.match(this.search);\n      });\n    },\n\n    getcategory() {\n      axios.get('http://127.0.0.1:8000/api/category', {\n        headers: {\n          Authorization: \"Bearer \" + localStorage.getItem('token')\n        }\n      }).then(response => {\n        this.categories = response.data;\n        console.log(response.data);\n      });\n    }\n\n  },\n\n  mounted() {\n    this.getcategory;\n  }\n\n};","map":{"version":3,"mappings":"AAsEA,OAAOA,KAAP,MAAkB,OAAlB;AACA,OAAOC,MAAP,MAAmB,UAAnB;AAEA,eAAe;EACbC,IAAI,EAAE,cADO;;EAEbC,IAAI,GAAE;IACJ,OAAM;MACJC,MAAM,EAAC,EADH;MAEJC,UAAU,EAAC,EAFP;MAGJC,OAAO,EAAE,CAHL;MAIJC,WAAW,EAAE,CAJT;MAKJC,KAAK,EAAE,CACL;QAAEC,EAAE,EAAE,CAAN;QAASC,UAAU,EAAE,MAArB;QAA6BC,SAAS,EAAE;MAAxC,CADK,EAEL;QAAEF,EAAE,EAAE,CAAN;QAASC,UAAU,EAAE,OAArB;QAA8BC,SAAS,EAAE;MAAzC,CAFK,EAGL;QAAEF,EAAE,EAAE,CAAN;QAASC,UAAU,EAAE,QAArB;QAA+BC,SAAS,EAAE;MAA1C,CAHK,EAIL;QAAEF,EAAE,EAAE,CAAN;QAASC,UAAU,EAAE,OAArB;QAA8BC,SAAS,EAAE;MAAzC,CAJK,EAKL;QAAEF,EAAE,EAAE,CAAN;QAASC,UAAU,EAAE,SAArB;QAAgCC,SAAS,EAAE;MAA3C,CALK,EAML;QAAEF,EAAE,EAAE,CAAN;QAASC,UAAU,EAAE,WAArB;QAAkCC,SAAS,EAAE;MAA7C,CANK,EAOL;QAAEF,EAAE,EAAE,CAAN;QAASC,UAAU,EAAE,WAArB;QAAkCC,SAAS,EAAE;MAA7C,CAPK,EAQL;QAAEF,EAAE,EAAE,CAAN;QAASC,UAAU,EAAE,UAArB;QAAiCC,SAAS,EAAE;MAA5C,CARK,EASL;QAAEF,EAAE,EAAE,CAAN;QAASC,UAAU,EAAE,OAArB;QAA8BC,SAAS,EAAE;MAAzC,CATK;IALH,CAAN;EAkBD,CArBY;;EAsBbC,OAAO,EAAC;IACNC,UAAU,CAACJ,EAAD,EAAI;MAEZ,KAAKK,KAAL,CAAWC,IAAX,CAAgB;QACdC,IAAI,EAAC,OADS;QAEdC,IAAI,EAAE,wDAFQ;QAGdC,iBAAiB,EAAE,KAHL;QAI