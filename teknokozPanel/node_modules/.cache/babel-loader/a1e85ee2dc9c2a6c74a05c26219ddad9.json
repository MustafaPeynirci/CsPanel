ion: \"Bearer \" + localStorage.getItem('token'),\n            },\n          }).then(response => {\n        this.$swal.fire({\n          position: 'top-end',\n          icon: 'success',\n          title: response.data,\n          showConfirmButton: false,\n          timer: 1500\n        });\n        router.push(\"/category\")\n      })\n    },\n  },\n  computed:{\n    getcategory(){\n        axios.get('http://127.0.0.1:8000/api/category',\n        {\n          headers: {\n            Authorization: \"Bearer \" + localStorage.getItem('token'),\n          }\n        }).then(response => {\n          this.categories = response.data;\n    })\n  }\n  },\n  mounted() {\n    this.getcategory;\n  }\n}\n</script>\n\n<style scoped>\n.divTable{\n  overflow: auto;\n}\ntable{\n  border-collapse: unset!important;\n}\ntable tr{\n  width: 100px;\n  height: 50px;\n}\ntable th{\n  font-weight: 500;\n  font-family: 'Optima';\n}\ntable td{\n  max-width: 150px;\n  overflow: hidden;\n  text-overflow: ellipsis;\n  white-space: nowrap;\n}\n\n.tdimg{\n  text-align: center;\n  overflow: unset;\n}\n.img{\n  width: 60px;\n  object-fit: cover;\n  transition: transform .8s;\n  border-radius: 5px;\n}\n.tdbutton{\n  width: 100px;\n  text-align: center;\n  border: none;\n}\n.btn{\n  border: none;\n  font-size: 20px;\n  transition: transform .2s;\n}\n.tableSp{\n  margin-top: 10px;\n  margin-right: 10px;\n  text-align: end;\n}\n.thSearch{\n  width: 200px;\n  height: 40px;\n  border: none;\n  border-radius: 5px;\n  padding: 3px;\n  text-align: center;\n  border-left: 4px solid coral ;\n}\n.thPlus{\n  border: none;\n  font-size: 20px;\n  background-color: #B1D7B4;\n  margin-left: 15px;\n}\n.thPlus:hover{\n  transform: scale(1.3);\n}\n.thSearch:focus{\n  border-left: 4px solid #a1c4fd;\n}\n.thSearch:focus-visible{\n  outline: none;\n}\n.btn-edit:hover{\n  color: coral;\n  transform: scale(1.3);\n  border: none;\n}\n.btn-del:hover{\n  color: red;\n  transform: scale(1.3);\n  border: none;\n}\n.img:hover{\