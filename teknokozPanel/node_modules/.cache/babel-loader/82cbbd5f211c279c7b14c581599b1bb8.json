    }\n  },\n  methods:{\n    updateCategory(){\n      let formdata = new FormData();\n      if (this.editCategory.image1 !== null){\n        formdata.append('image1',this.editCategory.image1)\n      }\n      formdata.append('name', this.editCategory.name)\n      formdata.append('content', this.editCategory.content)\n\n    },\n    uploadFile(e) {\n      if(this.$refs.file.files[0] !== null){\n        this.editCategory.image1  = this.$refs.file.files[0]\n      }else{\n        this.editCategory.image1 = null\n      }\n    },\n  },\n  computed:{\n    getEditCategory(){\n      axios.get('http://127.0.0.1:8000/api/category/' + this.$route.params.id,\n          {\n            headers: {\n              Authorization: \"Bearer \" + localStorage.getItem('token'),\n            }\n          }).then(response => {\n        this.editCategory = response.data\n      })\n    }\n  },\n  mounted() {\n    this.getEditCategory;\n  }\n}\n</script>\n\n<style scoped>\n.newItemBtnGroup{\n  text-align: end;\n}\n.btn{\n  border: none;\n  transition: transform .2s;\n}\n.kytBtn{\n  background-color: coral;\n  font-size: 15px;\n  margin: 8px;\n}\n.closeBtn{\n  background-color: #EB1D36;\n  font-size: 15px;\n  margin: 8px;\n}\n.kytBtn:hover{\n  transform: scale(1.1);\n}\n.closeBtn:hover{\n  transform: scale(1.1);\n}\n</style>"]},"metadata":{},"sourceType":"module"}