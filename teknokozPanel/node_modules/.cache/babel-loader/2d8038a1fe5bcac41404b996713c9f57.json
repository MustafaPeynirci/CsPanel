ion>\n\n      <p class=\"mt-3\">Current Page: {{ currentPage }}</p>\n\n      <b-table\n          id=\"table\"\n          :items=\"categories.data.data\"\n          :per-page=\"perPage\"\n          :current-page=\"currentPage\"\n          small\n      ></b-table>\n    </div>\n\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\nimport router from \"@/router\";\n\nexport default {\n  name: \"categoryView\",\n  data(){\n    return{\n      search:'',\n      categories: [],\n      perPage: 1,\n      currentPage: 1,\n    }\n  },\n  methods:{\n    deleteItem(id){\n\n      this.$swal.fire({\n        icon:\"error\",\n        text: 'Silinen Veri Geri Alınamaz, Devam Etmek İster Misiniz?',\n        confirmButtonText: 'Sil',\n        showDenyButton:true,\n        width:'300px',\n      }).then((result) => {\n        if (result.isConfirmed) {\n          axios.delete('http://127.0.0.1:8000/api/category/'+id,\n              {\n                headers: {\n                  Authorization: \"Bearer \" + localStorage.getItem('token'),\n                },\n              }).then(response => {\n            this.$swal.fire({\n              position: 'top-end',\n              icon: 'success',\n              text: response.data,\n              showConfirmButton: false,\n              width:'250px',\n              timer: 1500\n            });\n            setTimeout(function(){\n              window.location.reload();\n            },1600)\n          }).catch(error => {\n            this.$swal.fire({\n              position: 'top-end',\n              icon: 'error',\n              text: error,\n              showConfirmButton: false,\n              width:'250px',\n              timer: 1500\n            });\n          })\n        }\n        else if (result.isDenied) {\n        }\n      });\n\n\n    },\n  },\n  computed:{\n    filteredCategory(){\n      return this.categories.filter((category)=>{\n        return category.name.match(this.search)\n      })\n    },\n    getcategory(){\n        axios.get('http://127.0.0.1:8000/api/category',\n        {\n          headers: {\n            Authorization: \"Bearer \" + localStorage.getItem('token'),\n          }\n        }).then(response => {\n          this.categories = response.data;\n          console.log(response.data)\n    })\n  }\n  },\n  mounted(){\n    this.getcategory;\n  }\n}\n</script>\n\n<style scoped>\n.divTable{\n  overflow: auto;\n}\ntable{\n  border-collapse: unset!important;\n}\ntable tr{\n  width: 100px;\n  height: 50px;\n}\ntable th{\n  font-weight: 500;\n  font-family: 'Optima';\n}\ntable td{\n  max-width: 150px;\n  overflow: hidden;\n  text-overflow: ellipsis;\n  white-space: nowrap;\n}\n\n.tdimg{\n  text-align: center;\n  overflow: unset;\n}\n.img{\n  width: 60px;\n  object-fit: cover;\n  transition: transform .8s;\n  border-radius: 5px;\n}\n.tdbutton{\n  width: 100px;\n  text-align: center;\n  border: none;\n}\n.btn{\n  border: none;\n  font-size: 20px;\n  transition: transform .2s;\n}\n.tableSp{\n  margin-top: 10px;\n  margin-right: 10px;\n  text-align: end;\n}\n.thSearch{\n  width: 200px;\n  height: 40px;\n  border: none;\n  border-radius: 5px;\n  padding: 3px;\n  text-align: center;\n  border-left: 4px solid coral ;\n}\n.thPlus{\n  border: none;\n  font-size: 20px;\n  background-color: #B1D7B4;\n  margin-left: 15px;\n}\n.thPlus:hover{\n  transform: scale(1.3);\n}\n.thSearch:focus{\n  border-left: 4px solid #a1c4fd;\n}\n.thSearch:focus-visible{\n  outline: none;\n}\n.btn-edit:hover{\n  color: coral;\n  transform: scale(1.3);\n  border: none;\n}\n.btn-del:hover{\n  color: red;\n  transform: scale(1.3);\n  border: none;\n}\n.img:hover{\n  transform: scale(3);\n  border: 0.5px solid #fff;\n  border-radius: 5px;\n  -webkit-transform-origin-y: bottom;\n  -webkit-transform-origin-x: right;\n}\n</style>"]},"metadata":{},"sourceType":"module"}