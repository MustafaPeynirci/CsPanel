{"ast":null,"code":"import axios from \"axios\";\nimport router from \"@/router\";\nexport default {\n  name: \"categoryView\",\n\n  data() {\n    return {\n      search: '',\n      categories: [],\n      perPage: 1,\n      currentPage: 1\n    };\n  },\n\n  methods: {\n    deleteItem(id) {\n      this.$swal.fire({\n        icon: \"error\",\n        text: 'Silinen Veri Geri Alınamaz, Devam Etmek İster Misiniz?',\n        confirmButtonText: 'Sil',\n        showDenyButton: true,\n        width: '300px'\n      }).then(result => {\n        if (result.isConfirmed) {\n          axios.delete('http://127.0.0.1:8000/api/category/' + id, {\n            headers: {\n              Authorization: \"Bearer \" + localStorage.getItem('token')\n            }\n          }).then(response => {\n            this.$swal.fire({\n              position: 'top-end',\n              icon: 'success',\n              text: response.data,\n              showConfirmButton: false,\n              width: '250px',\n              timer: 1500\n            });\n            setTimeout(function () {\n              window.location.reload();\n            }, 1600);\n          }).catch(error => {\n            this.$swal.fire({\n              position: 'top-end',\n              icon: 'error',\n              text: error,\n              showConfirmButton: false,\n              width: '250px',\n              timer: 1500\n            });\n          });\n        } else if (result.isDenied) {}\n      });\n    }\n\n  },\n  computed: {\n    filteredCategory() {\n      return this.categories.filter(category => {\n        return category.name.match(this.search);\n      });\n    },\n\n    getcategory() {\n      axios.get('http://127.0.0.1:8000/api/category', {\n        headers: {\n          Authorization: \"Bearer \" + localStorage.getItem('token')\n        }\n      }).then(response => {\n        this.categories = response.data;\n        console.log(response.data);\n      });\n    }\n\n  },\n\n  mounted() {\n    this.getcategory;\n  }\n\n};","map":{"version":3,"mappings":"AAmEA,OAAOA,KAAP,MAAkB,OAAlB;AACA,OAAOC,MAAP,MAAmB,UAAnB;AAEA,eAAe;EACbC,IAAI,EAAE,cADO;;EAEbC,IAAI,GAAE;IACJ,OAAM;MACJC,MAAM,EAAC,EADH;MAEJC,UAAU,EAAE,EAFR;MAGJC,OAAO,EAAE,CAHL;MAIJC,WAAW,EAAE;IAJT,CAAN;EAMD,CATY;;EAUbC,OAAO,EAAC;IACNC,UAAU,CAACC,EAAD,EAAI;MAEZ,KAAKC,KAAL,CAAWC,IAAX,CAAgB;QACdC,IAAI,EAAC,OADS;QAEdC,IAAI,EAAE,wDAFQ;QAGdC,iBAAiB,EAAE,KAHL;QAIdC,cAAc,EAAC,IAJD;QAKdC,KAAK,EAAC;MALQ,CAAhB,EAMGC,IANH,CAMSC,MAAD,IAAY;QAClB,IAAIA,MAAM,CAACC,WAAX,EAAwB;UACtBpB,KAAK,CAACqB,MAAN,CAAa,wCAAsCX,EAAnD,EACI;YACEY,OAAO,EAAE;cACPC,aAAa,EAAE,YAAYC,YAAY,CAACC,OAAb,CAAqB,OAArB;YADpB;UADX,CADJ,EAKOP,IALP,CAKYQ,QAAO,IAAK;YACtB,KAAKf,KAAL,CAAWC,IAAX,CAAgB;cACde,QAAQ,EAAE,SADI;cAEdd,IAAI,EAAE,SAFQ;cAGdC,IAAI,EAAEY,QAAQ,CAACvB,IAHD;cAIdyB,iBAAiB,EAAE,KAJL;cAKdX,KAAK,EAAC,OALQ;cAMdY,KAAK,EAAE;YANO,CAAhB;YAQAC,UAAU,CAAC,YAAU;cACnBC,MAAM,CAACC,QAAP,CAAgBC,MAAhB;YACD,CAFS,EAER,IAFQ,CAAV;UAGD,CAjBD,EAiBGC,KAjBH,CAiBSC,KAAI,IAAK;YAChB,KAAKxB,KAAL,CAAWC,IAAX,CAAgB;cACde,QAAQ,EAAE,SADI;cAEdd,IAAI,EAAE,OAFQ;cAGdC,IAAI,EAAEqB,KAHQ;cAIdP,iBAAiB,EAAE,KAJL;cAKdX,KAAK,EAAC,OALQ;cAMdY,KAAK,EAAE;YANO,CAAhB;UAQD,CA1BD;QA2BF,CA5BA,MA6BK,IAAIV,MAAM,CAACiB,QAAX,EAAqB,CAC1B;MACD,CAtCD;IAyCD;;EA5CK,CAVK;EAwDbC,QAAQ,EAAC;IACPC,gBAAgB,GAAE;MAChB,OAAO,KAAKjC,UAAL,CAAgBkC,MAAhB,CAAwBC,QAAD,IAAY;QACxC,OAAOA,QAAQ,CAACtC,IAAT,CAAcuC,KAAd,CAAoB,KAAKrC,MAAzB,CAAP;MACD,CAFM,CAAP;IAGD,CALM;;IAMPsC,WAAW,GAAE;MACT1C,KAAK,CAAC2C,GAAN,CAAU,oCAAV,EACA;QACErB,OAAO,EAAE;UACPC,aAAa,EAAE,YAAYC,YAAY,CAACC,OAAb,CAAqB,OAArB;QADpB;MADX,CADA,EAKGP,IALH,CAKQQ,QAAO,IAAK;QAClB,KAAKrB,UAAL,GAAkBqB,QAAQ,CAACvB,IAA3B;QACAyC,OAAO,CAACC,GAAR,CAAYnB,QAAQ,CAACvB,IAArB;MACL,CARG;IASN;;EAhBS,CAxDI;;EA0Eb2C,OAAO,GAAE;IACP,KAAKJ,WAAL;EACF;;AA5Ea,CAAf","names":["axios","router","name","data","search","categories","perPage","currentPage","methods","deleteItem","id","$swal","fire","icon","text","confirmButtonText","showDenyButton","width","then","result","isConfirmed","delete","headers","A